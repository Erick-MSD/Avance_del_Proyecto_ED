<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="1100.0" prefHeight="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.TriageController">
	<top>
		<ToolBar>
			<Button text="Cargar BD" onAction="#onCargarBD"/>
			<Separator orientation="VERTICAL"/>
			<Button text="Registrar síntoma" onAction="#onRegistrarSintoma"/>
			<Separator orientation="VERTICAL"/>
			<Button text="Atender ROJO" onAction="#onAtenderRojo"/>
			<Button text="Atender NARANJA" onAction="#onAtenderNaranja"/>
			<Button text="Atender AMARILLO" onAction="#onAtenderAmarillo"/>
			<Button text="Atender VERDE" onAction="#onAtenderVerde"/>
			<Button text="Atender AZUL" onAction="#onAtenderAzul"/>
		</ToolBar>
	</top>
	<center>
		<TableView fx:id="table">
			<columns>
				<TableColumn fx:id="colRegistro" text="Registro" prefWidth="80"/>
				<TableColumn fx:id="colPaciente" text="Paciente" prefWidth="80"/>
				<TableColumn fx:id="colNombre" text="Nombre" prefWidth="140"/>
				<TableColumn fx:id="colNivel" text="Nivel" prefWidth="70"/>
				<TableColumn fx:id="colDepto" text="Departamento" prefWidth="140"/>
				<TableColumn fx:id="colDesc" text="Descripción" prefWidth="320"/>
				<TableColumn fx:id="colFecha" text="Asignada" prefWidth="140"/>
			</columns>
		</TableView>
	</center>
	<right>
		<VBox spacing="8.0" prefWidth="230.0" BorderPane.alignment="CENTER">
			<children>
				<Label text="Departamento" />
				<TextField fx:id="txtFiltroDepto" promptText="Depto" />
				<HBox spacing="6">
					<children>
						<Button text="Filtrar" onAction="#onFiltroDepto" />
						<Button text="Primera" onAction="#onPrimeraDepto" />
					</children>
				</HBox>
				<Button text="Eliminar Primera" onAction="#onEliminarPrimeraDepto" />
				<Label text="(Usa Filtrar antes para enfocar)" wrapText="true" />
			</children>
			<padding><Insets top="12" left="12" right="12" bottom="12"/></padding>
		</VBox>
	</right>
	<bottom>
		<HBox spacing="10" padding="10">
			<children>
				<Label text="Estado:" />
				<Label fx:id="lblStatus" text="--" />
			</children>
		</HBox>
	</bottom>
</BorderPane>
